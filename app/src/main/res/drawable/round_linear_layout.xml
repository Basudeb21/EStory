<!-- res/drawable/rounded_linear_layout.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <solid android:color="#FFFFFF" /> <!-- Background color of the layout -->
    <corners android:radius="16dp"/> <!-- Radius for rounded corners -->
    <stroke android:width="2dp" android:color="#CCCCCC"/> <!-- Optional: Border/stroke around the layout -->
    <padding
        android:left="16dp"
        android:top="16dp"
        android:right="16dp"
        android:bottom="16dp" />
</shape>
